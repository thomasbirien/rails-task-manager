<h1>Home</h1>
<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.content %></p>
  <p><%= task.done %></p>
  <%= link_to "Voir plus", task_path(task) %>
  <%= link_to "edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<h2> <%= link_to "write a new task !", new_task_path(@tasks)  %> </h2>



